<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lut_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/calc_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="9dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="9dp"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lut_lines">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_MC"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:padding="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="MC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_MR"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:padding="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="MR"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_MS"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:padding="5dp"
                android:text="MS"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_MPlus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:padding="5dp"
                android:text="M+"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_MMinus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:padding="5dp"
                android:text="M-"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_bsp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:text="⌫"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_unary"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:text="±"
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_c"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#449AFF"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:text="C"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_9"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_root"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:text="√"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_backNum"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="1/X"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_6"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onOpClick"
                android:padding="5dp"
                android:text="+"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_pow"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onOpClick"
                android:padding="5dp"
                android:text="*"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onOpClick"
                android:padding="5dp"
                android:text="-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_divine"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onOpClick"
                android:padding="5dp"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_0"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:onClick="onNumClick"
                android:padding="5dp"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_sep"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_calc"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:onClick="onFuncClick"
                android:padding="5dp"
                android:text="="
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lut_lines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/num_text"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="48sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_pi"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onFuncClick"
                android:text="pi"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_e"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="e"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_sin"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onFuncClick"
                android:text="sin()"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_cos"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="cos()"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_tg"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="tan()"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_cqrt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="∛"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="√" />

            <Button
                android:id="@+id/btn_ac"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="CE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_c"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="C"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_bsp"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="⌫"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_expo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onOpClick"
                android:text="^"
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_mod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="mod"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_l_branket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="("
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_r_branket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text=")"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_divine"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onOpClick"
                android:text="/"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="exp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_7"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_9"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_pow"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onOpClick"
                android:text="*"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_log10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="lg"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_4"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_6"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onOpClick"
                android:text="-"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_ln"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="ln"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_1"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onOpClick"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_unary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="+/-"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_double_zero"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="00"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_0"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onNumClick"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_sep"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_calc"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFuncClick"
                android:text="="
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>